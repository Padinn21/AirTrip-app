<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".presentation.ui.buyer.HomeActivity">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_wp"
                android:layout_width="0dp"
                android:layout_height="284dp"
                android:src="@drawable/nature_wp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_discover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/discover_beautiful"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_discover"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/place_with_us"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_discover" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="140dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/border_black"
                app:cardCornerRadius="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/iv_logo"
                        android:layout_width="106dp"
                        android:layout_height="96dp"
                        android:src="@drawable/logo"
                        app:layout_constraintEnd_toStartOf="@+id/btn_round"
                        app:layout_constraintStart_toEndOf="@+id/btn_oneway"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_booking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/booking"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_logo" />

                    <Button
                        android:id="@+id/btn_oneway"
                        style="@style/standarButton"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="15dp"
                        android:text="@string/one_way"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_booking" />

                    <Button
                        android:id="@+id/btn_round"
                        style="@style/standarButton"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="30dp"
                        android:text="@string/round"
                        android:textSize="15sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_booking" />

                    <EditText
                        android:id="@+id/et_from"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/border2"
                        android:drawableStart="@drawable/ic_takeoff"
                        android:drawablePadding="16dp"
                        android:hint="@string/from"
                        android:padding="15dp"
                        app:layout_constraintEnd_toEndOf="@+id/btn_round"
                        app:layout_constraintStart_toStartOf="@+id/btn_oneway"
                        app:layout_constraintTop_toBottomOf="@+id/btn_oneway" />

                    <EditText
                        android:id="@+id/et_to"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/border2"
                        android:drawableStart="@drawable/ic_arrived"
                        android:drawablePadding="16dp"
                        android:hint="@string/to"
                        android:padding="15dp"
                        app:layout_constraintEnd_toEndOf="@+id/btn_round"
                        app:layout_constraintStart_toStartOf="@+id/btn_oneway"
                        app:layout_constraintTop_toBottomOf="@+id/et_from" />

                    <EditText
                        android:id="@+id/et_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/border_black"
                        android:drawableStart="@drawable/ic_date"
                        android:drawablePadding="16dp"
                        android:hint="@string/departure"
                        android:padding="15dp"
                        app:layout_constraintEnd_toEndOf="@+id/et_to"
                        app:layout_constraintStart_toStartOf="@+id/et_to"
                        app:layout_constraintTop_toBottomOf="@+id/et_to" />

                    <EditText
                        android:id="@+id/et_traveler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="170dp"
                        android:background="@drawable/border_black"
                        android:drawableStart="@drawable/ic_seat"
                        android:drawablePadding="16dp"
                        android:hint="@string/seat_class"
                        android:padding="15dp"
                        app:layout_constraintEnd_toEndOf="@+id/et_date"
                        app:layout_constraintStart_toStartOf="@+id/et_date"
                        app:layout_constraintTop_toBottomOf="@+id/et_date" />

                    <Button
                        android:id="@+id/btn_search"
                        style="@style/bigButton"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/search"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/et_traveler" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/blue_base"
        app:itemIconTint="@color/color_bottom_nav"
        app:itemTextColor="@color/color_bottom_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_bottom" />

</androidx.constraintlayout.widget.ConstraintLayout>