<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.buyer.BoardingFragment"
    android:background="@color/blue_base">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/boarding_pass"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_detail_place_departure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/place_detail_ex"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/iv_line"
                app:layout_constraintStart_toStartOf="@+id/tv_place_departure"
                app:layout_constraintTop_toBottomOf="@+id/tv_place_departure" />

            <TextView
                android:id="@+id/tv_place_departure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="@string/place_init_ex"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView4" />

            <TextView
                android:id="@+id/tv_detail_place_arrived"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="30dp"
                android:text="@string/place_arrived_detail_ex"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_line"
                app:layout_constraintTop_toBottomOf="@+id/tv_place_arrived" />


            <TextView
                android:id="@+id/tv_place_arrived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:text="@string/place_arrived_ex"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView4" />

            <ImageView
                android:id="@+id/iv_line"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:src="@drawable/line"
                app:layout_constraintEnd_toStartOf="@+id/tv_place_arrived"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/tv_place_departure"
                app:layout_constraintTop_toTopOf="@+id/imageView4" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="43dp"
                android:layout_height="39dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_plane_white"
                app:layout_constraintEnd_toStartOf="@+id/tv_place_arrived"
                app:layout_constraintHorizontal_bias="0.505"
                app:layout_constraintStart_toEndOf="@+id/tv_place_departure"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/tv_time_departure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_ex"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/tv_place_departure"
                app:layout_constraintTop_toBottomOf="@+id/tv_detail_place_departure" />

            <TextView
                android:id="@+id/tv_time_arrived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_arrived_ex"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_place_arrived"
                app:layout_constraintTop_toBottomOf="@+id/tv_detail_place_arrived" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:cardCornerRadius="30dp"
                app:layout_constraintEnd_toEndOf="@+id/tv_time_arrived"
                app:layout_constraintStart_toStartOf="@+id/tv_time_departure"
                app:layout_constraintTop_toBottomOf="@+id/tv_time_departure">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_title_passenger"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/passenger_name"
                        android:textSize="15sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_passenger_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/name_ex"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        app:layout_constraintEnd_toEndOf="@+id/tv_title_passenger"
                        app:layout_constraintStart_toStartOf="@+id/tv_title_passenger"
                        app:layout_constraintTop_toBottomOf="@+id/tv_title_passenger" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_black"
                        android:drawableStart="@drawable/ic_date"
                        android:drawablePadding="10dp"
                        android:padding="10dp"
                        android:text="@string/date_departure_ex"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="@+id/tv_date_title"
                        app:layout_constraintTop_toBottomOf="@+id/tv_date_title" />

                    <TextView
                        android:id="@id/tv_date_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/date"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_passenger_name" />

                    <TextView
                        android:id="@+id/tv_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_black"
                        android:drawableStart="@drawable/ic_time"
                        android:drawablePadding="10dp"
                        android:padding="10dp"
                        android:text="@string/duration_ex"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="@+id/textView6"
                        app:layout_constraintTop_toBottomOf="@+id/textView6" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="24dp"
                        android:text="@string/duration"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_passenger_name" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="363dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="90dp"
                        android:src="@drawable/line2"
                        app:layout_constraintEnd_toEndOf="@+id/tv_duration"
                        app:layout_constraintStart_toStartOf="@+id/tv_date"
                        app:layout_constraintTop_toBottomOf="@+id/tv_passenger_name" />

                    <TextView
                        android:id="@+id/tv_seat_class_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/seat_class"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

                    <TextView
                        android:id="@+id/tv_seat_class"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/seat_class_ex"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="@+id/tv_seat_class_title"
                        app:layout_constraintTop_toBottomOf="@+id/tv_seat_class_title" />

                    <TextView
                        android:id="@+id/tv_seat_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/seat"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="@+id/tv_duration"
                        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

                    <ImageView
                        android:layout_width="341dp"
                        android:layout_height="53dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/ic_barcode"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_seat_class" />

                    <TextView
                        android:id="@+id/tv_seat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/seat_ex"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="@+id/tv_seat_title"
                        app:layout_constraintTop_toBottomOf="@+id/tv_seat_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</RelativeLayout>