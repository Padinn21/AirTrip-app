<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.binarfp.airtrip">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AirTrip"
        tools:targetApi="31">
        <activity
            android:name=".presentation.ui.admin.AdminActivity"
            android:exported="false"
            android:label="@string/title_activity_admin"
            android:theme="@style/Theme.AirTrip.NoActionBar" />
        <activity
            android:name=".presentation.ui.profile.PeralihanActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.buyer.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.profile.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.auth.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>